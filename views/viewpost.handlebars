<div class="page-header">
<div class="header-card">
    <h2>Tech Blog</h2>
</div>
</div>

<div class="home-post">
<div class="home-post-header">
    <h2>{{post.title}}</h2><p>Posted by {{post.username}} on {{format_date post.date_created}}</p>
</div>

<p>{{post.post}}</p>
</div>

{{#each comments as |comment|}}
<div class="comment">
    <div class="comment-header">
        <h3>Posted by {{comment.username}} on {{format_date comment.date_created}}</h3>
    </div>
    <p>{{comment.comment}}</p>
</div>
{{/each}}

<script src="/js/viewpost.js"></script>
